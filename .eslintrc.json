{
  "env": {
    "browser": true,
    "es2021": true
},
"extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
],
"parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
},
"plugins": [
    "react"
],
"rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
        "error",
        {
          "trailingComma": "all",
          "tabWidth": 4,
          "semi": false,
          "singleQuote": true,
          "bracketSpacing": true,
          "eslintIntegration": true,
          "printWidth": 100
        }
      ]
}
}
